{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Reviews",
    "description": "Manage reviews adding name, rating, comment and photo ( optional )"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 50
    },
    "comment": {
      "type": "text",
      "required": true,
      "minLength": 5,
      "maxLength": 250
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    }
  }
}
