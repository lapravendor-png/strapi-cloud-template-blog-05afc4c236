{
  "kind": "collectionType",
  "collectionName": "news-items",
  "info": {
    "singularName": "news-items",
    "pluralName": "news-items",
    "displayName": "News",
    "description": "Manage News adding title, subtitle and mini subtitle and image (optional)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5,
      "maxLength": 100
    },
    "subtitle": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 250
    },
    "mini_subtitle": {
      "type": "text",
      "required": true,
      "minLength": 5,
      "maxLength": 150
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    }
  }
}
