{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "News",
    "description": "Manage News adding title, subtitle, mini subtitles, date and image"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5,
      "maxLength": 100
    },
    "subtitle": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 250
    },

    "miniSubtitle1": { "type": "text" },
    "miniSubtitle2": { "type": "text" },
    "miniSubtitle3": { "type": "text" },
    "miniSubtitle4": { "type": "text" },
    "miniSubtitle5": { "type": "text" },
    "miniSubtitle6": { "type": "text" },
    "miniSubtitle7": { "type": "text" },
    "miniSubtitle8": { "type": "text" },
    "miniSubtitle9": { "type": "text" },
    "miniSubtitle10": { "type": "text" },

    "date": {
      "type": "date",
      "required": true
    },

    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    }
  }
}
