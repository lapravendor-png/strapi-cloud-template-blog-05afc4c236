{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "Новини",
    "description": "Керування новинами, додавання заголовка, підзаголовка, міні-субтитрів, дати та зображення"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "displayName": "Заголовок"
    },
    "subtitle": {
      "type": "text",
      "required": true,
      "displayName": "Підзаголовок"
    },
    "paragraphs": {
      "type": "component",
      "repeatable": true,
      "component": "content.paragraph",
      "max": 50
    },
    "date": { "type": "date", "required": true, "displayName": "Дата" },
    "image": { "type": "media", "multiple": false, "required": false, "displayName": "Зображення" }
  }
}
